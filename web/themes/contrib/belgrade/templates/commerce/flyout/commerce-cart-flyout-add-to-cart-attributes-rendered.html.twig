<fieldset class="product--rendered-attribute fieldgroup form-composite required js-form-item form-item js-form-wrapper form-wrapper my-3" aria-required="true">
  <legend class="border-bottom py-2 mb-3">
    <span class="fieldset-legend js-form-required form-required h6"><%= label %></span>
  </legend>
  <div class="fieldset-wrapper">
    <div class="form-radios d-flex">
      <% _.each(attributeValues, function(currentValue, key) { %>
      <div class="js-form-item form-item js-form-type-radio form-type-radio js-form-item-purchased-entity-attributes-attribute-<%= attributeId %> form-item-purchased-entity-attributes-attribute-<%= attributeId %> me-2">
        <input type="radio" class="form-radio" name="attribute_<%= attributeId %>" id="attribute_<%= attributeId %>_<%= currentValue.attribute_value_id %>" value="<%= currentValue.attribute_value_id %>" <%= (activeValue === currentValue.attribute_value_id) ? 'checked' : '' %>/>
        <label class="control-label option" for="attribute_<%= attributeId %>_<%= currentValue.attribute_value_id %>">
          <% print (currentValue.output) %>
        </label>
      </div>
      <% }); %>
    </div>
  </div>
</fieldset>
