{#
/**
 * @file
 * Two column template for the checkout form.
 *
 * Available variables:
 * - form: The form.
 *
 * @ingroup themeable
 */
#}
<div class="layout-checkout-form row mb-5">
  <div class="layout-region layout-region-checkout-main col-lg-7">
    {{ form|without('sidebar', 'actions') }}
  </div>
  <div class="layout-region layout-region-checkout-secondary col-lg-5 mb-4">
    <div class="bg-light p-4">
      <h5 class="mb-3">{% trans %} Order Summary {% endtrans %}</h5>
      {{ form.sidebar }}
    </div>
  </div>
  <div class="layout-region layout-region-checkout-footer col">
    {{ form.actions }}
  </div>
</div>
