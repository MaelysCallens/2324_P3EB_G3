<?xml version="1.0"?>
<ruleset name="DXPR">
  <description>Default PHP CodeSniffer configuration for DXPR projects.</description>
  <file>.</file>
  <arg name="extensions" value="php,module,inc,install,test,profile,theme"/>
  <config name="drupal_core_version" value="8"/>

  <exclude-pattern>*/.git/*</exclude-pattern>
  <exclude-pattern>*/config/*</exclude-pattern>
  <exclude-pattern>*/css/*</exclude-pattern>
  <exclude-pattern>*/js/*</exclude-pattern>
  <exclude-pattern>README.md</exclude-pattern>
  <exclude-pattern>CONTRIBUTING.md</exclude-pattern>

  <rule ref="Drupal">
    <!-- Complaints info keys Drupal.org package creates. -->
    <exclude name="Drupal.InfoFiles.AutoAddedKeys"/>
  </rule>

</ruleset>